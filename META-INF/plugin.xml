<idea-plugin version="2">
    <name>Gosu Inspections Plugin</name>
    <description>Gosu Checkstyle plugin (Ferrite). Additional code inspections
        and quick fixes for the Gosu language
    </description>
    <version>2.0.1</version>
    <vendor>Guidewire</vendor>
    <depends>gw.gosu.ij</depends>

    <!-- please see http://confluence.jetbrains.net/display/IDEADEV/Build+Number+Ranges for description -->
    <idea-version since-build="107.105"/>

    <application-components>
        <!-- Add your application components here -->
    </application-components>
    <project-components>
        <!-- Add your project components here -->
    </project-components>
    <actions>
        <!-- Add your actions here -->
    </actions>

    <extensions defaultExtensionNs="com.intellij">


        <!--################################################################################-->
        <!--################################### Comments ###################################-->
        <!--################################################################################-->




        <!--######################################################################################-->
        <!--######################################### GW Services Rules ###################################-->
        <!--######################################################################################-->





        <localInspection
                implementationClass="com.gwservices.inspections.pcf.CheckPostOnCheck"
                language="XML"
                groupPath="Gosu,GW Services Rules"
                bundle="com.gwservices.inspections.GwServicesBundle"
                groupKey="gwservices.pcf.group.name"
                key="gwservices.pcf.postonchange"
                displayName="Check for PostOnChange"
                shortName="CheckPostOnCheck" enabledByDefault="true"
                level="WARNING"/>
        <localInspection
                implementationClass="com.gwservices.inspections.pcf.CheckComplexVisibleAvailableCheck"
                language="XML"
                groupPath="Gosu,GW Services Rules"
                bundle="com.gwservices.inspections.GwServicesBundle"
                groupKey="gwservices.pcf.group.name"
                key="gwservices.pcf.complexvisibleavailable"
                displayName="Check for complex visible/available conditions"
                shortName="CheckComplexVisibleAvailableCheck"
                enabledByDefault="true"
                level="WARNING"/>
        <localInspection
                implementationClass="com.gwservices.inspections.pcf.CheckHardcodedLabel"
                language="XML"
                groupPath="Gosu,GW Services Rules"
                bundle="com.gwservices.inspections.GwServicesBundle"
                groupKey="gwservices.pcf.group.name"
                key="gwservices.pcf.hardcodedlabel"
                displayName="Check for hardcoded lable"
                shortName="CheckHardcodedLabel" enabledByDefault="true"
                level="WARNING"/>
        <localInspection
                implementationClass="com.gwservices.inspections.pcf.CheckTooMuchCodeInPCF"
                language="XML"
                groupPath="Gosu,GW Services Rules"
                bundle="com.gwservices.inspections.GwServicesBundle"
                groupKey="gwservices.pcf.group.name"
                key="gwservices.pcf.CheckTooMuchCodeInPCF"
                displayName="Too much code in pcf"
                shortName="CheckTooMuchCodeInPCF" enabledByDefault="true"
                level="WARNING"/>
        <localInspection
                implementationClass="com.gwservices.inspections.gosu.CheckUseOfNewDate"
                language="Gosu"
                groupPath="Gosu,GW Services Rules"
                bundle="com.gwservices.inspections.GwServicesBundle"
                groupKey="gwservices.gosu.group.name"
                key="gwservices.gosu.newdate"
                displayName="Check for new Date()"
                shortName="CheckUseOfNewDate" enabledByDefault="true"
                level="WARNING"/>
        <localInspection
                implementationClass="com.gwservices.inspections.gosu.CyclomaticComplexity"
                language="Gosu"
                groupPath="Gosu,GW Services Rules"
                bundle="com.gwservices.inspections.GwServicesBundle"
                groupKey="gwservices.gosu.group.name"
                key="gwservices.gosu.cyclomatic"
                displayName="Check cyclomatic complexity"
                shortName="CyclomaticComplexity" enabledByDefault="true"
                level="WARNING"/>

        <localInspection
                implementationClass="com.gwservices.inspections.gosu.CheckProductModelSynch"
                language="Gosu"
                groupPath="Gosu,GW Services Rules"
                bundle="com.gwservices.inspections.GwServicesBundle"
                groupKey="gwservices.gosu.group.name"
                key="gwservices.gosu.productmodelsynch"
                displayName="Check for ProductModel synchronization"
                shortName="CheckProductModelSynch" enabledByDefault="true"
                level="WARNING"/>
        <localInspection
                implementationClass="com.gwservices.inspections.gosu.CheckActivityPatternComparison"
                language="Gosu"
                groupPath="Gosu,GW Services Rules"
                bundle="com.gwservices.inspections.GwServicesBundle"
                groupKey="gwservices.gosu.group.name"
                key="gwservices.gosu.activityPatternComparison"
                displayName="Check for ActivityPattern comparison"
                shortName="CheckActivityPatternComparison"
                enabledByDefault="true"
                level="WARNING"/>

        <localInspection
                implementationClass="com.gwservices.inspections.gosu.collections.CheckCollectionWhereHasElements"
                language="Gosu"
                groupPath="Gosu,GW Services Rules"
                bundle="com.gwservices.inspections.GwServicesBundle"
                groupKey="gwservices.gosu.collection.group.name"
                key="gwservices.gosu.collections.where.haselements"
                displayName="Use of where(...).HasElements"
                shortName="CheckCollectionWhereHasElements"
                enabledByDefault="true" level="WARNING"/>
        <localInspection
                implementationClass="com.gwservices.inspections.gosu.collections.CheckCollectionWhereSingle"
                language="Gosu"
                groupPath="Gosu,GW Services Rules"
                bundle="com.gwservices.inspections.GwServicesBundle"
                groupKey="gwservices.gosu.collection.group.name"
                key="gwservices.gosu.collections.where.single"
                displayName="Use of where(...).single()"
                shortName="CheckCollectionWhereSingle" enabledByDefault="true"
                level="WARNING"/>
        <localInspection
                implementationClass="com.gwservices.inspections.gosu.collections.CheckCollectionWhereWhereTypeIs"
                language="Gosu"
                groupPath="Gosu,GW Services Rules"
                bundle="com.gwservices.inspections.GwServicesBundle"
                groupKey="gwservices.gosu.collection.group.name"
                key="gwservices.gosu.collection.whereWhereTypeIs"
                shortName="CheckCollectionWhereWhereTypeIs"
                enabledByDefault="true" level="WARNING"/>
        <localInspection
                implementationClass="com.gwservices.inspections.gosu.collections.CheckCollectionWhereTypeIsHasElements"
                language="Gosu"
                groupPath="Gosu,GW Services Rules"
                bundle="com.gwservices.inspections.GwServicesBundle"
                groupKey="gwservices.gosu.collection.group.name"
                key="gwservices.gosu.collections.wheretypeis.haselements"
                shortName="CheckCollectionWhereTypeIsHasElements"
                enabledByDefault="true" level="WARNING"/>
        <localInspection
                implementationClass="com.gwservices.inspections.gosu.collections.CheckCollectionWhereFirst"
                language="Gosu"
                groupPath="Gosu,GW Services Rules"
                bundle="com.gwservices.inspections.GwServicesBundle"
                groupKey="gwservices.gosu.collection.group.name"
                key="gwservices.gosu.collections.where.first"
                shortName="CheckCollectionWhereFirst"
                enabledByDefault="true" level="WARNING"/>
        <localInspection
                implementationClass="com.gwservices.inspections.gosu.collections.CheckCollectionWhereCount"
                language="Gosu"
                groupPath="Gosu,GW Services Rules"
                bundle="com.gwservices.inspections.GwServicesBundle"
                groupKey="gwservices.gosu.collection.group.name"
                key="gwservices.gosu.collection.wherecount"
                displayName="check for countWhere(...)"
                shortName="CheckCollectionWhereCount" enabledByDefault="true"
                level="WARNING"/>


    </extensions>
</idea-plugin>